pipeline {
    agent { label 'node1' }

    tools {
        maven 'maven'
    }

    environment {
        NAME = 'dibya'       // Environment variables are usually uppercase
    }

    parameters {
        string(name: 'lastname', defaultValue: 'barwa', description: 'Your last name')
    }

    stages {
        stage('build') {
            steps {
                sh 'mvn clean package'
                echo "Hello ${env.NAME} ${params.lastname}"
            }
        }

        stage('test') {
            parallel {
                stage('testA') {
                    steps {
                        echo "This is test A"
                    }
                }
                stage('testB') {
                    steps {
                        echo "This is test B"
                    }
                }
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: '**/target/*.jar'
        }
    }
}
